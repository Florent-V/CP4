<form
        title= {{ this.title }}
        method="post"
        action="{{ path(this.route, {'splitter_id': this.id, 'expense_id': this.id2}) }}"
        onsubmit="return confirm('Are you sure you want to delete this {{ entity }}?');"
>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ this.id) }}">
    <button class="btn text-light p-0"><i class="bi bi-trash3-fill"></i></button>
</form>
