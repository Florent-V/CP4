{# templates/components/PostForm.html.twig #}
<div {{ attributes }}>
    {{ form_start(form, {
        attr: {
            'data-action': 'live#action',
            'data-action-name': 'prevent|save'
        }
    }) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.toDoItems) }}

    <div class="centerBtn">
        <button class="btn btn-primary">{{ button_label|default('Cr√©er la ToDoList') }}</button>
    </div>
    {{ form_end(form) }}
</div>