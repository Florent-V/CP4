        method="post"
        action="{{ path('app_expense_delete', {'expense_id': expense.id, 'splitter_id': splitter.id}) }}"
        onsubmit="return confirm('Are you sure you want to delete this expense ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ expense.id) }}">
    <button class="btn"><i class="bi bi-trash3-fill"></i></button>
</form>
